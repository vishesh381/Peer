    <apiVersion>62.0</apiVersion>
    <decisions>
        <name>Check_Is_Weekly_Meeting</name>
        <label>Check Is Weekly Meeting</label>
        <locationX>176</locationX>
        <locationY>278</locationY>
        <defaultConnectorLabel>Not Weekly Meeting</defaultConnectorLabel>
        <rules>
            <name>Is_Weekly_Meeting</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.WorkTypeId</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Get_Peerstar_Settings.Weekly_Meeting_Work_Type_Id__c</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Parent_Work_Order</targetReference>
            </connector>
