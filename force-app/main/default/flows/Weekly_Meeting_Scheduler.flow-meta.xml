        </rules>
    </decisions>
    <decisions>
        <name>Check_Work_Order_Active</name>
        <label>Check Work Order Active</label>
        <locationX>314</locationX>
        <locationY>518</locationY>
        <defaultConnectorLabel>Work Order Not Active</defaultConnectorLabel>
        <rules>
            <name>Work_Order_Is_Active</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Parent_Work_Order</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Next_Weekly_Meeting</targetReference>
            </connector>
            <label>Work Order Is Active</label>
        </rules>
    </decisions>
    <description>Creates the next weekly meeting Service Appointment when a Weekly Meeting is completed. Uses Custom Metadata for configuration.</description>
    <environments>Default</environments>
    <formulas>
        <name>formulaNextWeekDue</name>
        <dataType>DateTime</dataType>
        <expression>IF(
    ISBLANK({!$Record.DueDate}),
    DATETIMEVALUE(TEXT({!$Flow.CurrentDate} + 7) &amp; &quot; 18:00:00&quot;),
    {!$Record.DueDate} + 7
)</expression>
    </formulas>
    <formulas>
        <name>formulaNextWeekEarliest</name>
        <dataType>DateTime</dataType>
        <expression>IF(
    ISBLANK({!$Record.EarliestStartTime}),
    DATETIMEVALUE(TEXT({!$Flow.CurrentDate} + 7) &amp; &quot; 08:00:00&quot;),
    {!$Record.EarliestStartTime} + 7
)</expression>
    </formulas>
    <formulas>
        <name>formulaNextWeekEnd</name>
        <dataType>DateTime</dataType>
        <expression>IF(
    ISBLANK({!$Record.SchedEndTime}),
    DATETIMEVALUE(TEXT({!$Flow.CurrentDate} + 7) &amp; &quot; 10:00:00&quot;),
    {!$Record.SchedEndTime} + 7
)</expression>
    </formulas>
    <formulas>
        <name>formulaNextWeekStart</name>
        <dataType>DateTime</dataType>
        <expression>IF(
    ISBLANK({!$Record.SchedStartTime}),
    DATETIMEVALUE(TEXT({!$Flow.CurrentDate} + 7) &amp; &quot; 09:00:00&quot;),
    {!$Record.SchedStartTime} + 7
)</expression>
    </formulas>
    <interviewLabel>Weekly Meeting Scheduler {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Weekly Meeting Scheduler</label>
    <processMetadataValues>
